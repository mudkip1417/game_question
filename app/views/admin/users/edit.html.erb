<%= stylesheet_link_tag 'edit_users', :media => "all" %>

<div class="container">

  <div class="row">

    <div class="col-lg-12">

      <div class="page-content">

        <h1 class="h2 mb-5 font-weight-normal" style="text-align: center; font-size: 40px;"><strong><span>C</span>hange <span>U</span>ser <span>I</span>nfo</strong></h1>

        <p class="errors">
          <% if @user.errors.any? %>
            <%#= @uesr.error.count %>
            <ul class="error-details">
              <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </p>

        <%= form_with model: @user, url: public_user_path(@user.id), method: :patch do |f| %>

          <div class="row">

            <div class="col-lg-6 col-sm-6 col-xs-6">

              <div class="user-edit-form">

                <label for="user_name">ユーザーネーム</label>

                <%= f.text_field :user_name, class:'form-control user_name', placeholder: "（20文字以内）", autofocus: true, maxlength: "20" %>

              </div>

              <div class="user-edit-form">

                <label for="user_image">ユーザー画像</label>

                <%= f.file_field :profile_image, class: 'form-control-file image', accept: "image/*" %>

              </div>

              <div class="user-edit-form">

                <label for="user_email">メールアドレス</label>

                <%= f.text_field :email, class:'form-control user_email' %>

              </div>

              <div class="user-edit-form">

                <label for="user_telephone_number">電話番号</label>

                <%= f.text_field :telephone_number, class:'form-control user_telephone_number' %>

              </div>

            </div>

            <div class="col-lg-6 col-sm-6 col-xs-6">

              <!--<div class="user-edit-form">-->

              <!--  <label for="user_password">パスワード</label>-->

                <%#= f.password_field :password, class:'form-control user_password', placeholder: "新パスワード6文字以上", autocomplete: "new-password" %>
                <%#= f.password_field :password_confirmation, class:'form-control user_password', placeholder: "新パスワード確認", autocomplete: "new-password" %>
                <%#= f.password_field :current_password, class:'form-control user_password', placeholder: "現在のパスワード", autocomplete: "current_password" %>

              <!--</div>-->

              <div class="user-edit-form">

                <label for="user_favorite_game">お気に入りのゲーム</label></label>

                <%= f.text_field :favorite_game, placeholder: "１番好きなゲームタイトルを入力", class:'form-control user_favorite_game' %>

              </div>

              <div class="user-edit-form">

                <label for="user_introduction">自己紹介</label>

                  <%= f.text_area :introduction, class:'form-control user_introduction', placeholder: "自己紹介文を入力（350文字以内）", size: '40x5', autofocus: true, maxlength: "350" %>

              </div>

            </div>

          </div>

          <div class="row">

            <div class="col-lg-4 col-sm-4 col-xs-4"></div>

            <div class="edit-button col-lg-4 col-sm-4 col-xs-4">

              <%= f.submit 'Edit User', class:'btn btn-outline-light', style: "color: #ec6090;" %>

            </div>

            <div class="delete-button col-lg-4 col-sm-4 col-xs-4">
              <%= link_to '退会させる', admin_unsubscribe_path, class: "glyphicon glyphicon-tint btn btn-outline-danger"%>
            </div>

          </div>

        <% end %>

      </div>

    </div>

  </div>

</div>

