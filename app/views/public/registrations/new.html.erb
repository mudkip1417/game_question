<%= stylesheet_link_tag 'sign', :media => "all" %>

<div class="container">

  <div class="row">

    <div class="col-lg-6 col-sm-6 col-xs-12 text-left">

      <%= image_tag 'Game.png' %>

    </div>

    <div class="col-lg-6 col-sm-6 col-xs-12 text-left">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="question-form">
          <label>メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="question-form">
          <label>ユーザーネーム</label>
          <%= f.text_field :user_name, placeholder: "20文字以内", class: "form-control" %>
        </div>

        <div class="question-form">
          <label>パスワード</label>
          <%= f.password_field :password, placeholder: "6文字以上" , autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="question-form">
          <label>パスワード確認</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="question-form">
          <label>電話番号</label>
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>

        <div class="up-button" style="text-align-leftr">
          <%= f.submit "Sign up", class:'btn btn-outline-light', style: "color: #ec6090;" %>
        </div>
      <% end %>

    </div>

  </div>

</div>

<% render "public/shared/links" %>



