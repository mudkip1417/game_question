<%= stylesheet_link_tag 'show_questions', :media => "all" %>

<div class="container">

  <div class="row">

    <div class="col-lg-12">

      <div class="page-content">

        <div class="row">

          <div class="col-lg-12">

            <div class="main-profile">

              <div class="row">

                <div class="col-lg-12">

                  <div class="album py-2">

                    <h1 class="my-questions-title"><strong><i class="fa-solid fa-clipboard-question"></i> <span><%= @question.user.user_name %></span>'s <span>Q</span>uestion</strong></h1>

                    <div class="row">

                      <div class="col-lg-2 col-sm-2 col-xs-2 my-questions">

                        <%= link_to public_user_path(@question.user.id) do %>
                          <%= image_tag @question.user.get_profile_image, style: "border-radius: 100px;", class: "user_image_question" %>
                        <% end %>

                      </div>

                      <div class="col-lg-10 col-sm-10 col-xs-10 my-questions">

                        <p>
                          <span class="question-user-name" ><strong><%= @question.user.user_name %></strong></span>
                          <span class="up-time text-muted"><%= @question.created_at.strftime("%Y年 %m月 %d日 %H:%M") %></span>
                        </p>

                        <div class="question-body">

                          <p class="question-title"><strong><%= @question.title %></strong></p>

                          <div class="d-flex justify-content-between align-items-center">

                            <p class="question-contents"><%= @question.question %></p>

                          </div>

                          <div class="ol-lg-12 col-sm-12 col-xs-12 question-images">
                            <% if @question.question_images.attached? %>
                              <% @question.question_images.each do |image| %>
                                <%= image_tag image, style: "border-radius: 20px;", class:'question-image' %>
                              <% end %>
                            <% end %>
                          </div>

                          <div class="text-right">

                            <% if @question.user.id == current_user.id %>

                              <span>
                                <%= link_to public_question_path(@question.id), class: "show-link", method: :delete do %>
                                  <i class="fa-solid fa-trash-can"  style="color: red; font-size: 30px;"></i>
                                <% end %>
                              </span>

                              <span>
                                <%= link_to edit_public_question_path(@question.id), class: "show-link" do %>
                                  <i class="fa-regular fa-pen-to-square" style="color: #FFCCFF; font-size: 30px;"></i>
                                <% end %>
                              </span>

                            <% end %>

                            <span>

                              <% if @question.bookmarked_by?(current_user) %>

                                <td>
                                  <%= link_to public_question_bookmarks_path(@question.id), method: :delete do %>
                                    <i class="fa-solid fa-bookmark"  style="color: #FFCCFF; font-size: 30px;"></i>
                                  <% end %>
                                </td>

                              <% else %>

                                <td>
                                  <%= link_to public_question_bookmarks_path(@question.id), method: :post do %>
                                    <i class="fa-regular fa-bookmark" style="color: #FFCCFF; font-size: 30px;"></i>
                                  <% end %>
                                </td>

                              <% end %>

                            </span>

                          </div>

                        </div>

                      </div>

                    </div>

                    <div class="mb-5 border-bottom border-dark"></div>

                    <h1 class="comments"><strong><i class="fa-solid fa-comment-dots"></i> <span>U</span>p <span>C</span>mment <span>!!</span></strong></h1>

                    <div class="row">

                      <div class="col-lg-12 col-sm-12 col-xs-12">

                        <%= form_with model: [@question,@comment], url: public_question_comments_path(@question), method: :post do |f| %>

                        <div class="row">

                          <div class="col-lg-12 col-sm-12 col-xs-12 comment-form">

                            <%= f.text_area :comment, placeholder: "コメントをここに(500文字以内)", class:"form-control", size: "40x5" %>

                          </div>

                          <div class="col-lg-12 col-sm-12 col-xs-12 comment-button">

                            <%= f.submit 'Comment!!', class:'btn btn-outline-light' %>

                          </div>

                          </div>

                        <% end %>

                      </div>

                    </div>
                    <br>

                    <h1 class="comments"><strong><i class="fa-solid fa-comments"></i> <span>C</span>omments</strong></h1>

                    <% @question.comments.each do |comment| %>

                      <div class="row">

                        <div class="col-lg-1 col-sm-1 col-xs-1 my-questions">

                          <%= link_to public_user_path(comment.user.id) do %>
                            <%= image_tag comment.user.get_profile_image, style: "border-radius: 100px;", class: "user_image_question" %>
                          <% end %>

                        </div>

                        <div class="col-lg-11 col-sm-11 col-xs-11 my-questions">

                          <p>
                            <span class="question-user-name" ><strong><%= comment.user.user_name %></strong></span>
                            <span class="up-time text-muted"><%= comment.created_at.strftime("%Y年 %m月 %d日 %H:%M") %></span>
                          </p>

                          <div class="question-body">

                            <div class="d-flex justify-content-between align-items-center">

                              <p class="question-contents"><%= comment.comment %></p>

                            </div>

                            <div class="text-right">

                              <% if user_signed_in? && comment.user == current_user %>
                                <%= link_to public_question_comment_path(comment.question), method: :delete do %>
                                  <i class="fa-solid fa-trash-can" style="color: red; font-size: 30px;"></i>
                                <% end %>
                                <% elsif admin_signed_in? %>
                                <%= link_to "管理者削除", admin_question_comment_path(comment.question), method: :delete, class: "btn btn-sm btn-danger p-0 p-1", style: "font-size: 8px;" %>
                              <% end %>

                            </div>

                          </div>

                        </div>

                      </div>

                      <div class="border-bottom border-dark"></div>

                    <% end %>

                  </div>

                </div>

              </div>

            </div>

          </div>

        </div>

      </div>

    </div>

  </div>

</div>

