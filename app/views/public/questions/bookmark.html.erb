<%= stylesheet_link_tag 'questions', :media => "all" %>
<%= stylesheet_link_tag 'titles', :media => "all" %>
<%= stylesheet_link_tag 'titles', :media => "all" %>

<div class="container">

  <div class="row">

    <div class="col-lg-12">

      <div class="page-content">

        <div class="row">

          <div class="col-lg-12">

            <div class="main-profile">

              <div class="row">

                <div class="col-lg-12">

                  <div class="album py-2">

                    <h1 class="my-questions-title"><strong><i class="fa-solid fa-clipboard-question"></i> <span>B</span>ookmark <span>Q</span>uestions</strong></h1>

                    <% @bookmarks.each do |bookmark| %>

                      <div class="row">

                        <div class="col-lg-2 col-sm-2 col-xs-2 my-questions">

                          <%= link_to public_user_path(bookmark.question.user.id) do %>
                            <%= image_tag bookmark.question.user.get_profile_image, style: "border-radius: 50%;", class: "user_image_question" %>
                          <% end %>

                        </div>

                        <div class="col-lg-10 col-sm-10 col-xs-10 my-questions">

                          <p>
                            <span class="question-user-name" ><strong><%= bookmark.question.user.user_name %></strong></span>
                            <span class="up-time text-muted"><%= bookmark.question.created_at.strftime("%Y年 %m月 %d日 %H:%M") %></span>
                          </p>

                          <div class="question-body">

                            <p class="question-title"><strong><%= bookmark.question.title %></strong></p>

                            <div class="d-flex justify-content-between align-items-center">

                              <p class="question-contents"><%= bookmark.question.question %></p>

                            </div>

                            <div class="ol-lg-12 col-sm-12 col-xs-12 question-images">
                              <% if bookmark.question.question_images.attached? %>
                                <% bookmark.question.question_images.each do |image| %>
                                  <%= image_tag image, style: "border-radius: 20px;", class:'question-image' %>
                                <% end %>
                              <% end %>
                            </div>

                            <div class="text-right">

                              <span>
                                <%= link_to public_question_path(bookmark.question.id), class: "show-link" do  %>
                                  <i class="fa-solid fa-door-open" style="color: #ec6090; font-size: 30px;"></i>
                                <% end %>
                              </span>

                              <span>

                                <% if bookmark.question.bookmarked_by?(current_user) %>

                                  <td>
                                    <%= link_to public_question_bookmarks_path(bookmark.question.id), method: :delete do %>
                                      <i class="fa-solid fa-bookmark"  style="color: #ec6090; font-size: 30px;"></i>
                                    <% end %>
                                  </td>

                                <% else %>

                                  <td>
                                    <%= link_to public_question_bookmarks_path(bookmark.question.id), method: :post do %>
                                      <i class="fa-regular fa-bookmark" style="color: #ec6090; font-size: 30px;"></i>
                                    <% end %>
                                  </td>

                                <% end %>

                              </span>

                            </div>

                          </div>

                        </div>

                      </div>

                      <div class="border-bottom border-dark"></div>

                    <% end %>

                  </div>

                </div>

              </div>

            </div>

            <div class="row">
              <div class="col-lg-3 col-sm-3 col-xs-3"></div>
                <div class="col-lg-6 col-sm-6 col-xs-6 pagi-nation">
                  <%= paginate @bookmarks %>
                </div>
              <div class="col-lg-3 col-sm-3 col-xs-3"></div>
            </div>

          </div>

        </div>

      </div>

    </div>

  </div>

</div>
