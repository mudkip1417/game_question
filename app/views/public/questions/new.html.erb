<%= stylesheet_link_tag 'questions', :media => "all" %>

<div class="container">

  <div class="row">

    <div class="col-lg-12">

      <div class="page-content">

        <h1 class="h2 mb-5 font-weight-normal" style="text-align: center;"><strong><span class="initial">U</span>p <span class="initial">Q</span>uestion <span>!!</span></strong></h1>

        <p class="errors">
          <% if @question.errors.any? %>
            <%= @question.errors.count %>つのエラーが発生しました
            <ul class="error-details">
              <% @question.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </p>

        <%= form_with model: @question, url: public_questions_path, method: :post do |f| %>

          <div class="row">

            <div class="col-lg-6 col-sm-12 col-xs-12">

              <div class="question-form">

                <label for="question_title">質問タイトル</label>

                <%= f.text_area :title, class:'form-control item_name', placeholder: "質問のタイトルを入力。(200文字以内)", autofocus: true, maxlength: "200" %>

              </div>

              <div class="question-form">

                <label for="image">関連画像</label><br>

                <%= f.file_field :question_images, multiple: true, accept: "image/*", class:'image' %>

              </div>

              <div class="question-form">

                <label for="tag-name">タグ</label>

                <%= f.text_area :tag_name, class:'form-control', placeholder: "  , で区切ることで複数選択できます。" %>

              </div>

            </div>

            <div class="col-lg-6 col-sm-12 col-xs-12">

              <div class="question-form">

                <label for="question-content">質問内容</label>

                <%= f.text_area :question, class:'form-control', placeholder: "質問内容を入力。（1000文字以内）", size: '40x12', autofocus: true, maxlength: "1000" %>

              </div>

                <!--<div class="form-group">-->

                <!--  <label for="item_introduction">Genre</label>-->

                  <%#= f.collection_select :genre_id, Genre.all,:id,:name,{promit:"--選択してください--"}, {class:'form-control item_genre'} %>

                <!--</div>-->

            </div>

          </div>

          <div class="up-button" style="text-align-center">

            <%= f.submit 'Up Question !!', class:'btn btn-outline-light', style: "color: #ec6090;" %>

          </div>

        <% end %>

      </div>

    </div>

  </div>

</div>