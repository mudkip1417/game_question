<div><%=link_to "グループを作成する",new_public_group_path %> | <%=link_to "グループ一覧",public_groups_path %></div>

<br>
<div class='col-md-8 offset-md-1'>

  <h2>Groups</h2>

  <table class='table table-hover table-inverse text-light'>

    <thead>

      <tr>

        <th></th>

        <th>グループ名</th>

        <th>紹介文</th>

        <th colspan="3"></th>

      </tr>

    </thead>

    <tbody>

      <% @groups.each do |group| %>

        <tr>

          <td><%= image_tag group.get_image, size: "50x50", class:'bd-placeholder-img card-img-top' %></td>

          <td><%= link_to group.name, public_group_path(group) %></td>

          <td><%= group.introduction %></td>

          <td><%= group.users.count %></td>

          <td>
            <% if group.owner_id == current_user.id %>
              <%= link_to 'Edit', edit_public_group_path(group), class: "btn btn-sm btn-success" %>
            <% end %>
          </td>

        </tr>

      <% end %>

    </tbody>

  </table>

</div>