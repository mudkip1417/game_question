<%= stylesheet_link_tag 'questions', :media => "all" %>
<%= stylesheet_link_tag 'titles', :media => "all" %>
<%= stylesheet_link_tag 'show_questions', :media => "all" %>

<div class="container">

  <div class="row">

    <div class="col-lg-12">

      <div class="page-content">

        <div class="row">

          <div class="col-lg-12">

            <div class="main-profile">

              <div class="row">

                <div class="col-lg-12">

                  <div class="album py-2">

                    <div class="row">

                      <div class="col-lg-6 col-sm-6 col-xs-6 my-questions">
                        <h1 class="my-questions-title"><strong><i class="fa-solid fa-people-group"></i> <span>G</span>roups</strong></h1>
                      </div>

                      <div class="col-lg-6 col-sm-6 col-xs-6 up-button" style="text-align: center;">
                        <%=link_to "グループを作成する",new_public_group_path, class:'btn btn-outline-light', style: "color: #ec6090;" %>
                      </div>

                    </div>

                    <% @groups.each do |group| %>

                      <div class="row">

                        <div class="col-lg-2 col-sm-2 col-xs-2 my-questions">

                          <%= link_to public_group_path(group.id) do %>
                            <%= image_tag group.get_image, style: "border-radius: 50%;", class: "user_image_question" %>
                          <% end %>

                        </div>

                        <div class="col-lg-10 col-sm-10 col-xs-10 my-questions">

                            <p class="question_user_name"><span class="question-user-name" ><strong><%= group.name %></strong></span></p>

                            <p class="text-right up-time"><span class="text-muted"><%= group.users.count %> 人参加中</span></p>

                          <div class="question-body">

                            <div class="d-flex justify-content-between align-items-center">

                              <p class="question-contents"><%= group.introduction %></p>

                            </div>

                            <div class="text-right">

                              <span>

                                <%= link_to public_group_path(group.id), class: "show-link" do %>
                                  <i class="fa-solid fa-door-open" style="color: #ec6090; font-size: 30px;"></i>
                                <% end %>

                              </span>

                              <span>

                                <% if group.owner_id == current_user.id %>
                                  <%= link_to edit_public_group_path(group.id), class: "show-link" do %>
                                    <i class="fa-regular fa-pen-to-square" style="color: #ec6090; font-size: 30px;"></i>
                                  <% end %>
                                <% end %>

                              </span>

                            </div>

                          </div>

                        </div>

                      </div>

                      <div class="border-bottom border-dark"></div>

                    <% end %>

                  </div>

                </div>

              </div>

            </div>

            <%= render 'share/paginate' , questions: @groups %>

          </div>

        </div>

      </div>

    </div>

  </div>

</div>







