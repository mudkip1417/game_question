<%= stylesheet_link_tag 'users', :media => "all" %>

<div class="container">

  <div class="row">

    <div class="col-lg-12">

      <div class="page-content">

        <div class="row">

          <div class="col-lg-12">

            <div class="main-profile">

              <div class="row">

                <div class="col-lg-4">

                  <%= image_tag "Game.png",style: "border-radius: 23px;", class: "user_image" %>

                </div>

                <div class="col-lg-4 align-self-center">

                  <ul>
                    <li>Name <span><%= current_user.last_name %> <%= current_user.first_name %></span></li>
                    <li>Telephone number <span><%= current_user.telephone_number %></span></li>
                    <li>Email <span><%= current_user.email %></span></li>
                    <p class="edit-link">
                      <%= link_to edit_public_user_path, class: "btn btn-outline-danger" do %>
                       Edit User
                      <% end %>
                    </p>
                  </ul>

                </div>

                <div class="col-lg-4 align-self-center">

                  <div class="up-question">



                  </div>

                </div>

              </div>

            </div>

          </div>

        </div>

      </div>

    </div>

  </div>

</div>


