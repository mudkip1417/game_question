<%= stylesheet_link_tag 'edit_users', :media => "all" %>

<div class="container">

  <div class="row">

    <div class="col-lg-12">

      <div class="page-content">

        <h1 class="h2 mb-5 font-weight-normal" style="text-align: center; font-size: 40px;"><strong><span>C</span>hange <span>U</span>ser <span>I</span>nfo</strong></h1>

        <%= form_with model: @user, url: public_user_path(@user.id), method: :patch do |f| %>

          <div class="row">

            <div class="col-lg-6 col-sm-6 col-xs-6">

              <div class="user-edit-form">

                <label for="user_name">ニックネーム</label>

                <%= f.text_field :user_name, class:'form-control user_name', placeholder: "（15文字以内）" %>

              </div>

              <div class="user-edit-form">

                <label for="user_image">ユーザー画像</label>

                <%= f.file_field :profile_image, class: 'form-control-file image', accept: "image/*" %>

              </div>

              <div class="user-edit-form">

                <label for="user_email">メールアドレス</label>

                <%= f.text_field :email, class:'form-control user_email' %>

              </div>

              <div class="user-edit-form">

                <label for="user_telephone_number">電話番号</label>

                <%= f.text_field :telephone_number, class:'form-control user_telephone_number' %>

              </div>

            </div>

            <div class="col-lg-6 col-sm-6 col-xs-6">

              <div class="user-edit-form">

                <label for="user_favorite_game">お気に入りのゲーム</label></label>

                <%= f.text_field :favorite_game, placeholder: "１番好きなゲームタイトルを入力", class:'form-control user_favorite_game' %>

              </div>

              <div class="user-edit-form">

                <label for="user_introduction">自己紹介</label>

                  <%= f.text_area :introduction, class:'form-control user_introduction', placeholder: "自己紹介文を入力（200文字以内）", size: '40x5' %>

              </div>

            </div>

          </div>

          <div class="edit-button" style="text-align-center">

            <%= f.submit 'Edit User', class:'btn btn-danger' %>

          </div>

        <% end %>

      </div>

    </div>

  </div>

</div>

