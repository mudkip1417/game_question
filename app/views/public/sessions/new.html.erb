<%= stylesheet_link_tag 'log', :media => "all" %>

<div class="container">

  <div class="row">

    <div class="col-lg-4 col-sm-4 col-xs-4 text-center"></div>

    <div class="col-lg-4 col-sm-4 col-xs-4 text-center">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <%= image_tag 'Game.png', size: "250x250" %>

          <%= f.label :email, class: "sr-only" %>
          <%= f.email_field :email, autofocus: true, placeholder: "email", autocomplete: "email", class:'form-control' %>

          <%= f.label :password, class: "sr-only" %>
          <%= f.password_field :password, placeholder: "password(6文字以上)", autocomplete: "current-password", class:'form-control' %>

          <br>
        <% if devise_mapping.rememberable? %>
          <div class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="up-button" style="text-align-leftr">
          <%= f.submit "Log in !!", class:'btn btn-outline-light', style: "color: #ec6090;" %>
        </div>
      <% end %>

      <br>
      登録がお済みではない方は<%= link_to "こちら", new_registration_path(resource_name) %>から新規登録

    </div>

    <div class="col-lg-4 col-sm-4 col-xs-4 text-center"></div>

  </div>

</div>

<% render "public/shared/links" %>

