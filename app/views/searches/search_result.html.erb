<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>

    <tbody>

      <% @users.each do |user| %>

        <tr>

          <td><%= user.last_name %></td>

        </tr>

      <% end %>

    </tbody>

  <% else %>

    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->

    <tbody>

      <% @questions.each do |question| %>

        <tr>

          <td><%= question.title %></td>

          <td><%= question.question %></td>

        </tr>

      <% end %>

    </tbody>

  <% end %>

</table>