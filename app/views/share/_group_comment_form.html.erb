<%= form_with model: [group,group_comment], url: public_group_group_comments_path(group.id), method: :post do |f| %>

  <div class="row">

    <div class="col-lg-12 col-sm-12 col-xs-12 comment-form">

      <%= f.text_area :group_comment, placeholder: "コメントをここに(500文字以内)", class:"form-control", size: "40x5" %>

    </div>

    <div class="col-lg-12 col-sm-12 col-xs-12 comment-button">

      <%= f.submit 'Comment!!', class:'btn btn-outline-light' %>

    </div>

  </div>

<% end %>